<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.example.taranair.rpi.Splash"
android:background="@color/teal"
android:gravity="center"
android:id="@+id/rules">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:gravity="center"
    android:layout_height="fill_parent">

    <TextView android:text="Rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="32sp"/>

    <TextView android:text=" \n \nTry your best to find the hidden location! As you get closer to the location, the lights will turn red. As you get further away, they will turn blue. In case you're struggling, hit the 'Clues' button to get a big hint!"
        android:layout_width= "400px"
        android:layout_height="700px"
        android:textColor="@color/white"/>

</LinearLayout>

</RelativeLayout>
